<html>
	<head>
        <style type="text/css">
			*, *::before, *::after {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

            body {
                font-family: 'Poppins', 'Arial', sans-serif;
                color: #000000;
            }

			ul {
				list-style-type: none;
			}

			.header, .footer {
				margin: auto;
				margin-top: 10px;
			}

			.header table {
				margin: 0 auto;
			}

			.header td {
				padding: 0 5px;
			}

			.main {
				margin: 0 auto;
				border-spacing: 20px;
				width: 50%;
			}

			.main > tr > td {
				padding: 20px;
				width: 30%;
				background-color: #f2f5fc;
				border-radius: 15px;
				vertical-align: top;
			}

			.main h2 {
				font-size: 1.2rem;
				margin-bottom: 10px;
			}

			.main span {
				background-color: #c9c9c9;
				color: white;
				padding: 5px 10px;
				border-radius: 10px;
			}

			.icon {
				width: 30px;
				height: 30px;
			}

			.no-avatar {
				display: block;
				width: 30px;
				height: 30px;
				border-radius: 5px;
				background-color: #dde6fb;
				background-size: 16px;
				background-position: center;
				background-repeat: no-repeat;
				background-image: url("data:image/svg+xml;base64,")
			}

			.code-badge {
				background-color: #0160be;
				color: #fff;
				padding: 5px 10px;
				border-radius: 10px;
				margin-left: 20px;
			}

			.anchor-button {
				background-color: #0160be;
				color: #fff;
				padding: 10px 20px;
				border-radius: 10px;
				text-decoration: none;
			}
		</style>
	</head>
	<body>
		<table class="header">
			<tr>
				<td>
					<img width="45" height="45" src='data:image/avif;base64,'/>
				</td>
				<td>
					<h1>SkyAnalytics</h1>
				</td>
			</tr>
		</table>

		<table class="header">
			<tr>
				<td>
					{{#if report.icon_path}}
						<img class="icon" src="{{base64ImageSrc report.icon_path}}" alt="image" />
					{{else}}
						<span class="no-avatar"></span>
					{{/if}}
				</td>
				<td>
					<p>{{ report.source.name }}</p>
				</td>
				<td>
					<span class="code-badge">#{{ report.code }}</span>
				</td>
			</tr>
		</table>

		<table class="main">
			<tr>
				<td>
					<h2>Description</h2>
					<p style="min-height: 100px;">{{ report.description }}</p>
				</td>				
			</tr>
			<tr>
				<td>
					<h2>Date</h2>
					<p>{{ report.created_at }}</p>
				</td>
			</tr>
			<tr>
				<td>
					<h2>Report By</h2>
					<div>
						<span>{{ report.user.name }}</span>
						<span>{{ report.user.contact }}</span>
					</div>
				</td>
			</tr>

			<tr>
				<td>
					<h2>Metadata</h2>
					<div>
						{{#each report.metadata}}
							<span>{{this}}</span>
						{{/each}}
					</div>
				</td>
			</tr>
		</table>

		<table class="footer">
			<tr>
				<td>
					<a class="anchor-button" href="https://www.google.com">View Report</a>
				</td>
			</tr>
		</table>
	</body>
</html>